<div class="jumbotron">
  <form action="/signup" method="POST">
    Username:
    <input type="text" name="user[name]" value="<%= params[:name] %>">
    Password:
    <input type="password" name="user[password]">
    Password Confirmation:
    <input type="password" name="user[password_confirmation]">
    <input type="submit">
  </form>
</div>
